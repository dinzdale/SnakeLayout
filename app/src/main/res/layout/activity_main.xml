<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="buttonVM"
            type="com.snakelayout.gary_jacobs.infragisiticstasksnakelayout.model.ButtonModel" />
    </data>
    <FrameLayout
        android:id="@+id/topcontainerFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.snakelayout.gary_jacobs.infragisiticstasksnakelayout.SnakeLayout
            android:id="@+id/snake_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{buttonVM.buttonLabel}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="100dp"
                android:text="Label 2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="100dp"
                android:text="Label 3" />
        </com.snakelayout.gary_jacobs.infragisiticstasksnakelayout.SnakeLayout>
    </FrameLayout>
</layout>